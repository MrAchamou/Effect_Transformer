
{
  "name": "visual-effects-transformer-desktop",
  "version": "2.0.0",
  "description": "ðŸŽ¨ Transformateur rÃ©volutionnaire d'effets JavaScript - Version Desktop",
  "main": "electron-main.js",
  "author": "Digital Alchemy Lab",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:all",
    "build:windows": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.digitalalchemylab.visualeffectstransformer",
    "productName": "Visual Effects Transformer",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "web/**/*",
      "server/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}
